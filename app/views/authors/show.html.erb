<div class="container emp-profile">
  <form method="post">
    <div class="row">
      <div class="col-md-4">
       <div class="profile-img">
         <%= image_tag "/#{@author.avatar}" %>
       </div>
      </div>
      <div class="col-md-6">
        <div class="profile-head">
          <h3>
            <%= @author.name %>
          </h3>
          <button class="like btn btn-default" type="button"><%= t("author.follow") %></button>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab " aria-controls="home" aria-selected="true"><%= t("author.profile") %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false"><%= t("author.book", name: @author.name) %></a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="author col-md-8">
        <div class="tab-content profile-tab" id="myTabContent">
          <div class="tab-pane fade active" id="home" role="tabpanel" aria-labelledby="home-tab">
           <div class="row">
             <div class="col-md-6">
               <p><%= @author.profile %></p>
             </div>
           </div>
          </div>
          <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <div class="row">
              <div class="col-md-6">
                <p><%= render partial: "book", collection: @author.books %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>           
</div>
