<div class="container">
  <div class="well">
    <%= link_to t(".bnt-new_user"), new_admin_user_path, remote: true, class: "btn btn-primary" %>
    <div class="new-product"></div>
  </div>

  <div class="input-group">
    <%= search_form_for [:admin,@search],class: "navbar-form" do |f| %>
      <%= f.text_field :name_cont, class: "form-control",value: "", placeholder: t(".msg-search_name") %>
      <%= f.text_field :id_in, class: "form-control",value: "", placeholder: t(".msg-search_id") %>
      <div class="input-group-btn">
      <%= button_tag class: "btn btn-default", value: "search" do %>
        <i class="glyphicon glyphicon-search"></i>
      <% end %>
    <% end %>
    </div>
  </div>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th><%= t(".tb-id") %></th>
        <th><%= t(".tb-name") %></th>
        <td><%= t(".tb-email") %></td>
        <td><%= t(".tb-phone") %></td>
        <td><%= t(".tb-gender") %></td>
        <td><%= t(".tb-role") %></td>
        <td><%= t(".tb-action") %></td>
      </tr>
    </thead>
    <tbody class="product-index">
      <%= render "index" %>
    </tbody>
  </table>
</div>
<div id="product-modal" class="modal fade"></div>
<div id="notification-modal" class=" modal fade"></div>
<%= will_paginate @users %>
