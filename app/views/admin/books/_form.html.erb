<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for [:admin, @book], remote: true do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group">
          <%= f.label :name, class:"control-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :category, class: "control-label" %>
          <%= f.select :category_id, select_category, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :publisher, class: "control-label" %>
          <%= f.select :publisher_id, select_publisher, class: "form-control" %>
        </div>
        <%= f.fields_for :author_books do |ff| %>
          <div class="form-group">
            <%= ff.label :author, class: "control-label" %>
            <%= ff.select :author_id, select_author, class: "form-control" %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :content, class: "control-label" %>
          <%= f.text_area :content, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :quantity_of_pages, class: "control-label" %>
          <%= f.number_field :quantity_of_pages, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :quantity_of_books, class: "control-label" %>
          <%= f.number_field :quantity_of_books, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :image, class: "control-label" %>
          <%= f.file_field :image, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :publishing_year, class: "control-label" %>
          <%= f.select :publishing_year,
            (Time.zone.now.year - Settings.book.year_max)..(Time.zone.now.year +  Settings.book.year_min) %>
        </div>
    </div>
    <div class="modal-footer">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to t(".bnt-cancel"), "#", class: "btn", data: {dismiss: "modal"} %>
    </div>
    <% end %>
  </div>
</div>
