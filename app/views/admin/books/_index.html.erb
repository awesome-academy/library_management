<% n = 0 %>
<% @books.each do |book| %>
  <tr>
    <td><%= book.id %></td>
    <td><%= book.name %></td>
    <td><%= book.writers %></td>
    <td><%= get_name_publisher book.publisher_id %></td>
    <td><%= book.quantity_of_pages %></td>
    <td><%= book.publishing_year %></td>
    <td><%= book.quantity_of_books %></td>
    <td>
      <%= link_to t(".show"), admin_book_path(book), remote: true %>
      &nbsp;
      <%= link_to t(".edit"), edit_admin_book_path(book), remote: true  %>
      &nbsp;
      <%= link_to t(".delete"), admin_book_delete_path(book), remote: true, class: "delete-user" %>
    </td>
  </tr>
<% end %>
